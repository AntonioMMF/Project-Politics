
    {{#if message }}
    <div class="alert alert-warning" role="alert"> {{ message }} </div>
    {{/if}}

<div class="article-wrapper container">
  {{#each articles}}
    <div class="article-item border-bottom border-primary mb-4">
      <h1>{{this.title}}</h1>
      <a> {{this.description}} </a> <br> <a class="mr-0" href="{{this.link}}">Full Article</a> </p>
      <img src="{{this.imgArticle}}" alt="" width="100%">
      {{!-- <button type="button" class="btn btn-outline-dark">Click Here to Vote</button> --}}
      <div class="vote mb-3" >
          <p class="for text-light mb-0" style= "width: {{this.voteYes.length}}00%"> For: {{this.voteYes.length}} </p>
          <p class="against text-light mb-0" style= "width: {{this.voteNo.length}}00%"> Against: {{this.voteNo.length}}</p>
      </div>
      <div class ="votingSharing mb-3">
      <div> <a href="/voting/{{this._id}}" class="btn btn-outline-primary btn-light" role="button" aria-pressed="true">Click Here to Vote<a></a></div>
      <div> <a href="#" class="btn btn-outline-primary btn-light" role="button" aria-pressed="true">Share</a></div>
      </div>



    </div>
  
  {{/each}}
</div>




