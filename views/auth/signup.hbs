<div class="backgroundImage text-white">
  <div class="container">
    <p class="text__lucidaGrande">SIGN UP</p>

    <form action="/auth/signup" method="POST" id="form-container">
      <label for="email">email</label><br>
      <input class="form-control" id="email" type="text" name="email" placeholder="JonSnow">

      <br>

      <label for="password">Password</label><br>
      <input class="form-control" id="password" type="password" name="password" placeholder="Your password">
      <br>
      {{#if message }}
      <div class="error-message">{{ message }}</div>
      {{/if}}

      <br>
      <a>Are you a politician?</a>

      <label class="ml-4"  for="yes"> Yes </label>
      <input type="radio" id="yes" value="politician" name="role"> 
      <label class="ml-2" for="no"> No </label>
      <input type="radio" id="no" value="user" name="role">


      <br>
      <br>


      <button class="btn btn-light">SIGN UP</button>

      <p class="account-message">
        Do you already have an account?
        <a href="/auth/login">Login</a>
      </p>
    </form>

  </div>
</div>