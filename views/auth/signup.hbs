<div class="backgroundImage text-white">
  <div class="container">
    <p class="text__lucidaGrande">SIGN UP</p>

    <form action="/auth/signup" method="POST" id="form-container">
      <label for="username">Username</label><br>
      <input class="form-control" id="username" type="text" name="username" placeholder="JonSnow">

      <br><br>

      <label for="password">Password</label><br>
      <input class="form-control" id="password" type="password" name="password" placeholder="Your password">
      <br>
      {{#if message }}
      <div class="error-message">{{ message }}</div>
      {{/if}}

      <br><br>
      <p>Are you a politician?</p>
      <label for="password">Yes</label>
      <input type="checkbox" value="yes">
      <label class="ml-4" for="password">No</label>
      <input type="checkbox" value="No">



      <br><br>


      <button class="btn btn-light">SIGN UP</button>

      <p class="account-message">
        Do you already have an account?
        <a href="/auth/login">Login</a>
      </p>
    </form>

  </div>
</div>